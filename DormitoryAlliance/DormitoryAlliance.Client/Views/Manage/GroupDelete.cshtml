@model DormitoryAlliance.Client.Models.Group

<h3>Ви справді хочете це видалити</h3>
<div>
    <h4>Група</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Назва
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="GroupDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="GroupIndex">Повернутися до списку</a>
    </form>
</div>
