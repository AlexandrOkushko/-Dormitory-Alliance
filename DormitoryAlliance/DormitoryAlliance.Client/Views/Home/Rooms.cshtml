@model IEnumerable<DormitoryAlliance.Client.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<h1>Комнаты в общаге</h1>

@if (Model.ToList().Any())
{
<table class="table">
    <thead>
        <tr>
            <th>
                Выберете комнату
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dormitory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dormitory.Address)
            </td>
            <td>|</td>
        </tr>
}
    </tbody>
</table>
}